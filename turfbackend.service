[Unit]
Description=ASP.NET Core Turf Management Backend
After=network.target

[Service]
WorkingDirectory=/home/ubuntu/Downloads/backend/publish
ExecStart=/usr/bin/env ASPNETCORE_URLS=http://0.0.0.0:5125 /snap/bin/dotnet turfmanagement.dll
Restart=always
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=turfbackend
User=ubuntu
Environment=DOTNET_ENVIRONMENT=Production

[Install]
WantedBy=multi-user.target
